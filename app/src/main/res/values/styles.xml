<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RegisterDialog" parent="Theme.AppCompat.Light.Dialog"/>

    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="TextsPref" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="EditTextPref" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

</resources>
