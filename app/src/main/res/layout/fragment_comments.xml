<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lvComments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnLeaveComment" />

    <TextView
        android:id="@+id/tvNoComments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/text_no_comments"
        android:textSize="@dimen/no_items_text_size"
        android:textStyle="italic"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnLeaveComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_leave_comments"
        android:textSize="@dimen/default_text_size" />

</RelativeLayout>